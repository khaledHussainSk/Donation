<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Donation" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">#00B588</item>
        <item name="colorPrimaryVariant">#00B588</item>
        <item name="colorOnPrimary">#00B588</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#00B588</item>
        <item name="colorSecondaryVariant">#00B588</item>
        <item name="colorOnSecondary">#00B588</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
