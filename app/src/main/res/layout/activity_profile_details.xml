<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9FF"
    tools:context=".ProfileDetailsActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_18sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_32sdp"
        android:background="@color/white"
        app:cardCornerRadius="@dimen/_8sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_user"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="@dimen/_75sdp"
                        android:src="@drawable/ic_baseline_account_circle_24"
                        android:layout_marginTop="@dimen/_21sdp"
                        />

                    <TextView
                        android:layout_marginTop="@dimen/_9sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="khaled skaik"
                        android:textSize="@dimen/_16ssp"
                        android:layout_marginBottom="@dimen/_16sdp"
                        android:textStyle="bold"
                        android:textColor="#1C2340"
                        ></TextView>

                    <EditText
                        android:id="@+id/et_fullName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:background="@drawable/et_shape"
                        android:drawableEnd="@drawable/ic_edit"
                        android:drawablePadding="@dimen/_5sdp"
                        android:hint="@string/fullname_hint"
                        android:inputType="textPersonName"
                        android:padding="@dimen/_16sdp"
                        android:textColor="#1C2340"
                        android:textColorHint="#1C2340"
                        android:textSize="@dimen/_12sdp"></EditText>

                    <EditText
                        android:id="@+id/et_phoneNumber"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:background="@drawable/et_shape"
                        android:drawablePadding="@dimen/_5sdp"
                        android:drawableEnd="@drawable/ic_edit"
                        android:hint="@string/phoneNumber_hint"
                        android:inputType="phone"
                        android:padding="@dimen/_16sdp"
                        android:textColor="#1C2340"
                        android:textColorHint="#1C2340"
                        android:textSize="@dimen/_12sdp"></EditText>

                    <EditText
                        android:id="@+id/et_address"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:background="@drawable/et_shape"
                        android:drawablePadding="@dimen/_5sdp"
                        android:drawableEnd="@drawable/ic_edit"
                        android:hint="@string/address_hint"
                        android:inputType="textPostalAddress"
                        android:padding="@dimen/_16sdp"
                        android:textColor="#1C2340"
                        android:textColorHint="#1C2340"
                        android:textSize="@dimen/_12sdp"></EditText>

                    <EditText
                        android:id="@+id/et_email"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:background="@drawable/et_shape"
                        android:drawablePadding="@dimen/_5sdp"
                        android:drawableEnd="@drawable/ic_edit"
                        android:hint="@string/email_hint"
                        android:inputType="textEmailAddress"
                        android:padding="@dimen/_16sdp"
                        android:textColor="#1C2340"
                        android:textColorHint="#1C2340"
                        android:textSize="@dimen/_12sdp"></EditText>

                    <EditText
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:background="@drawable/et_shape"
                        android:drawablePadding="@dimen/_5sdp"
                        android:drawableEnd="@drawable/ic_edit"
                        android:hint="@string/password_hint"
                        android:inputType="textPassword"
                        android:padding="@dimen/_16sdp"
                        android:textColor="#1C2340"
                        android:textColorHint="#1C2340"
                        android:textSize="@dimen/_12sdp"></EditText>

                    <EditText
                        android:id="@+id/et_confirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:background="@drawable/et_shape"
                        android:drawableEnd="@drawable/ic_edit"
                        android:drawablePadding="@dimen/_5sdp"
                        android:hint="@string/confirmPassword_hint"
                        android:inputType="textPassword"
                        android:padding="@dimen/_16sdp"
                        android:textColor="#1C2340"
                        android:textColorHint="#1C2340"
                        android:textSize="@dimen/_12sdp"></EditText>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_signUp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_below="@+id/remember_me_cb"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_17sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:gravity="center"
                        android:text="Save Now"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp"
                        app:backgroundTint="#00B588"
                        app:cornerRadius="@dimen/_25sdp" />

                </LinearLayout>

            </ScrollView>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:contentScrim="?attr/colorPrimary"
        app:toolbarId="@+id/toolbar">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarP"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.MaterialComponents.Toolbar.Primary">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="Profile Details"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_18ssp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/ic_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:src="@drawable/icon_ionic_ios_arrow_back" />
            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>


    </com.google.android.material.appbar.CollapsingToolbarLayout>

</RelativeLayout>